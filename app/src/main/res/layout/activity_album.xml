<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp"
    tools:context=".AlbumActivity">

    <!-- Album Header -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:layout_marginBottom="16dp">

        <Button
            android:id="@+id/back_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/back"
            android:padding="8dp" />

        <TextView
            android:id="@+id/album_name_title"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Album"
            android:textSize="24sp"
            android:textStyle="bold"
            android:layout_marginStart="16dp" />

        <Button
            android:id="@+id/album_options_menu"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="â‹®"
            android:textSize="18sp" />

    </LinearLayout>

    <!-- Photos Grid -->
    <RecyclerView
        android:id="@+id/photo_grid"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:padding="8dp" />

    <!-- Empty State -->
    <TextView
        android:id="@+id/empty_photos_message"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:text="@string/no_photos_in_album"
        android:gravity="center"
        android:textSize="16sp"
        android:visibility="gone" />

    <!-- Action Buttons -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="16dp">

        <Button
            android:id="@+id/add_photo_button"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="@string/add_photo"
            android:layout_marginEnd="4dp" />

        <Button
            android:id="@+id/remove_photo_button"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="@string/remove_photo"
            android:layout_marginStart="4dp"
            android:layout_marginEnd="4dp" />

        <Button
            android:id="@+id/move_photo_button"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="@string/move_photo"
            android:layout_marginStart="4dp" />

    </LinearLayout>

</LinearLayout>
