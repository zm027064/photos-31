<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#000000">

    <!-- Top Header -->
    <LinearLayout
        android:id="@+id/photo_header"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:padding="12dp"
        android:background="#333333">

        <Button
            android:id="@+id/back_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/back"
            android:padding="8dp" />

        <TextView
            android:id="@+id/photo_filename"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Photo"
            android:textSize="18sp"
            android:textColor="#FFFFFF"
            android:layout_marginStart="16dp" />

        <Button
            android:id="@+id/slideshow_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/slideshow"
            android:textSize="12sp"
            android:padding="6dp" />

    </LinearLayout>

    <!-- Main Photo View -->
    <ImageView
        android:id="@+id/photo_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/photo_header"
        android:layout_above="@id/tags_container"
        android:scaleType="fitCenter" />

    <!-- Tags Container -->
    <LinearLayout
        android:id="@+id/tags_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@id/slideshow_controls"
        android:orientation="vertical"
        android:padding="12dp"
        android:background="#33333388">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/tags_label"
            android:textColor="#FFFFFF"
            android:textStyle="bold"
            android:textSize="14sp"
            android:layout_marginBottom="8dp" />

        <RecyclerView
            android:id="@+id/tags_list"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/no_tags_message"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/no_tags"
            android:textColor="#CCCCCC"
            android:textSize="12sp" />

    </LinearLayout>

    <!-- Slideshow Controls -->
    <LinearLayout
        android:id="@+id/slideshow_controls"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:orientation="horizontal"
        android:gravity="center"
        android:padding="12dp"
        android:background="#333333">

        <Button
            android:id="@+id/prev_button"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:text="⬅"
            android:textSize="24sp" />

        <Button
            android:id="@+id/add_tag_button"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="@string/add_tag"
            android:layout_marginStart="8dp"
            android:layout_marginEnd="8dp" />

        <Button
            android:id="@+id/delete_tag_button"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="@string/delete_tag"
            android:layout_marginStart="8dp"
            android:layout_marginEnd="8dp" />

        <Button
            android:id="@+id/next_button"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:text="➡"
            android:textSize="24sp" />

    </LinearLayout>

</RelativeLayout>
